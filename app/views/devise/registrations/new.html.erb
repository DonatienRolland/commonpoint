<div class="row">
  <div class="col-sm-3 col-sm-offset-4 col-md-4 col-md-offset-4 col-xs-6">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :avatar, label:'Votre Avatar' %>
        <%= f.input :avatar_cache, as: :hidden %>
        <%= f.input :first_name, label:'PrÃ©nom', required: true, autofocus: true %>
        <%= f.input :last_name, label:'Nom', required: true, autofocus: true %>
        <%= f.input :phone, label:'Mobile', required: true, autofocus: true %>
        <%= f.input :email, required: true, autofocus: true, label:"Inscrivez vous avez l'adresse email pro" %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
      </div>
      <%= f.error :base %>
      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
