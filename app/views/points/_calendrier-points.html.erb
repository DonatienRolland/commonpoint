
<%= month_calendar events: @points do |date, points| %>
  <%= date.day %>
  <div class="row">
    <% points.each do |point| %>
      <div class="dropup
        <%= points.count >= 3 ? 'col-lg-4' : '' %>
          <%= points.count == 2 ? 'col-lg-6' : '' %>
          <%= points.count == 1 ? 'col-lg-12 stars' : '' %>
          <%= point.is_full? ? 'green-color-border' : 'red-color-border' %>
          <%= @user.invited?(point) && !@user.is_owner?(point) && !@user.participated?(point) ? 'orange-background' : '' %>
          <%= @user.participated?(point) && !@user.is_owner?(point) ? 'blue-background' : '' %>
          <%= @user.is_owner?(point) ? 'red-background' : '' %>
      " style="position: relative;">
          <% if point.is_new?%>
          <div class="new-point">
            <p>new</p>
          </div>
          <% end %>
          <%= link_to "#", class:"point-calendar modal-button radius-points-calendar dropdown-toggle",
              data: {toggle: 'dropdown', target: "drop_#{point.id}"}, aria: { haspopup: true, expanded: false} do %>
              <div class="contain-image icon_cercle" style="background-image: url('<%= image_path point.user_activity.activity.icon %>')">
              </div>
          <% end %>

          <%= render 'modal-info-point', point: point %>

      </div>
    <% end %>
  </div>
<% end %>


