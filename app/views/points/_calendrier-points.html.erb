
<%= month_calendar events: @points do |date, points| %>
  <%= date.day %>
  <div class="row">
    <% points.each do |point| %>
      <div class="dropup" style="position: relative;">
          <% if point.is_new?%>
            <p>TODO</p>
          <% end %>
          <%= link_to "#", class:"point-calendar modal-button radius-points-calendar dropdown-toggle col-xs-12
              #{ 'col-lg-4' if points.count < 3 }
              #{ 'col-lg-4' if points.count == 3 }
              #{ 'col-lg-6' if points.count == 2 }
              #{ 'col-lg-12 stars' if points.count == 1 }
              #{ 'red-color-border' if !point.is_full? }
              #{ 'green-color-border' if point.is_full? }
              #{ 'orange-background' if @user.invated?(point) && !@user.is_owner?(point) && !@user.partipated?(point) }
              #{ 'blue-background' if @user.partipated?(point) && !@user.is_owner?(point) }
              #{ 'red-background' if @user.is_owner?(point) }",
              data: {toggle: 'dropdown', target: "drop_#{point.id}"}, aria: { haspopup: true, expanded: false} do %>
              <div class="contain-image icon_cercle" style="background-image: url('<%= image_path point.user_activity.activity.icon %>')">
              </div>
              <div class="<%= points.count >= 2 ? 'hidden' : '' %> hidden-xs ">
                <%= point.id %>
              </div>
          <% end %>

          <%= render 'modal-info-point', point: point %>

      </div>
    <% end %>
  </div>
<% end %>



