<button type="button" class="btn-primary recherche-btn" data-toggle="modal" data-target="#newPointModal" style="margin: auto;
    border-radius: 8px;">
  Créer un match
</button>

  <div id="user_activity-search_bar">

    <%= form_tag @path_select_date, method: :get do %>
      <div class="row">
        <div class="col-sm-3 col-xs-12" style="margin-top: 5px;">
          <%= select_tag :activity_title, options_for_select(@user_points.collect{ |u| u.user_activity.activity.title}.insert(0, "Tous"), params[:activity_title]) %>
        </div>
        <div class="col-sm-3 col-xs-12 input-search" style="margin-top: 5px;">
          <%= text_field_tag :dates, params[:dates].present? ? params[:dates] : "Tous", :class =>'datepicker2'  %>
        </div>
        <div class="col-sm-3 col-xs-12" style="margin-top: 5px;">
          <%= select_tag :addresses, options_for_select(@address.insert(0, "Tous"), params[:addresses]), {class:'select2'}  %>
        </div>
        <div class="col-sm-3 col-xs-12" style="margin-top: 5px;">
          <%= button_tag class:"recherche-btn" do %>
            <i class="fas fa-search"></i> <h4 class="hidden-sm hidden-xs"> Rechercher </h4>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>


<h3>Vous avez <strong><%= pluralize @points.size, "Point" %></strong> correspondant à votre recherche </h3>
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="active nav-item">
    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Calendrier</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Flux</a>
  </li>
</ul>

<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <%= render 'calendrier-points', user: @user, points: @points %>
  </div>

  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
    <%= render 'list-points', user: @user, points: @points %>
  </div>
</div>


