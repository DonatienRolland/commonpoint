  <div id="user_activity-search_bar">

    <div style="display: flex; align-items: center;">
      <h2 style="font-size: 32px; margin-right: 5px;">Filtré par activités  </h2>
      <div class="row" style="width: 30%">
        <%= form_tag @path_select_date, method: :get do %>
          <div class="col-sm-9 col-xs-12" style="margin-top: 5px;">
            <%= select_tag :activity_title, options_for_select(@user_points.collect{ |u| u.user_activity.activity.title}.insert(0, "Tous"), params[:activity_title]) %>
          </div>
          <!-- <div class="col-sm-3 col-xs-12 input-search" style="margin-top: 5px;">
            <#%= text_field_tag :dates, params[:dates].present? ? params[:dates] : "Tous", :class =>'datepicker2'  %>
          </div>
          <div class="col-sm-3 col-xs-12" style="margin-top: 5px;">
            <#%= select_tag :addresses, options_for_select(@address.insert(0, "Tous"), params[:addresses]), {class:'select2'}  %>
          </div>
   -->     <div class="col-sm-3 col-xs-12" style="margin-top: 5px;">
            <%= button_tag class:"recherche-btn" do %>
              <i class="fas fa-search"></i>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="examples">
        <div class="example missing-particiapants">
          <p>Manque de personne</p>
          <div class="red-color-border example-bloc">
            <%= link_to "#", class:"stars point-calendar modal-button radius-points-calendar" do %>
              <div class="contain-image icon_cercle" style="background-image: url('https://res.cloudinary.com/dj7bq8py7/image/upload/v1541578509/logo.png')">
              </div>
            <% end %>
          </div>
        </div>
        <div class="example full">
          <p>Nombre de participants suffisant</p>
          <div class="green-color-border example-bloc">
            <%= link_to "#", class:"stars point-calendar modal-button radius-points-calendar" do %>
              <div class="contain-image icon_cercle" style="background-image: url('https://res.cloudinary.com/dj7bq8py7/image/upload/v1541578509/logo.png')">
              </div>
            <% end %>
          </div>
        </div>
        <div class="example waiting-for-answer">
          <p>En attente de réponse</p>
          <div class="example-bloc">
            <%= link_to "#", class:"stars point-calendar modal-button radius-points-calendar" do %>
              <div class="contain-image icon_cercle" style="background-image: url('https://res.cloudinary.com/dj7bq8py7/image/upload/v1541578509/logo.png')">
              </div>
            <% end %>
          </div>
        </div>
        <div class="example accepted">
          <p>Accepté</p>
          <div class="green-background  example-bloc">
            <%= link_to "#", class:"stars point-calendar modal-button radius-points-calendar" do %>
              <div class="contain-image icon_cercle" style="background-image: url('https://res.cloudinary.com/dj7bq8py7/image/upload/v1541578509/logo.png')">
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

