<div class="information padding-blocks">
  <div class="dimension-onglet">
    <h3 class="title-onglet" >Informations</h3>
  </div>

  <div class="background-white eql-height " id="grid-info">
    <div class="items item-activity">
      <%= image_tag @point.user_activity.activity.icon2  %>
      <p><strong><%= @point.user_activity.activity.title  %></strong></p>
    </div>
    <div class="items item-name">
      <i class="fas fa-brain"></i>
      <p><strong> <%= @point.user.full_name %> </strong></p>
    </div>
    <div class="items item-day">
      <i class="far fa-calendar-alt"></i>
      <p>  <%= @point.date_day %></p>
    </div>
    <div class="items item-hour">
      <i class="far fa-clock"></i>
      <p><%= @point.date_hour %></p>
    </div>
    <div class="items item-type">
      <i class="far fa-envelope"></i><i class="fas fa-globe-americas"></i>
      <p><strong><%= @point.type_of_point  %></strong></p>
    </div>

    <div class="items item-participants">

        <i class="fas fa-users"></i>

      <div class="item-text">
        <p> participants:</p>
        <p class="five-margin">Min: <strong><%= @point.number_min %></strong></p>
        <p class="five-margin">Max <strong><%= @point.number_max.present? ? @point.number_max : "<i class='fas fa-times'></i>".html_safe %></strong> </p>
      </div>
    </div>

    <div class="items item-phone">
      <i class="fas fa-phone"></i>
      <p><strong><%= @point.user.phone.present? ? @point.user.phone : "pas renseignée"  %></strong></p>
    </div>
    <div class="items item-price">
      <i class="fas fa-euro-sign"></i>
      <p><strong><%= @point.price %> €</strong></p>
    </div>


