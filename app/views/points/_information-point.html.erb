<div class="information col-lg-12 col-md-12 col-sm-12 padding-blocks">
  <div class="dimension-onglet">
    <h3 class="title-onglet" >Informations</h3>
  </div>

  <div class="background-white">
    <div class="row top-bottom-margin center-items">
      <div class="col-lg-1 col-xs-6">
        <p>Activitée:</p>
      </div>
      <div class="col-lg-4 col-xs-6">
        <%= @point.user_activity.activity.title  %>
      </div>
      <div class="col-lg-2 col-xs-6">
        <p>Type de point:</p>
      </div>
      <div class="col-lg-4 col-xs-5">
        <%= @point.type_of_point  %>
      </div>
    </div>


    <div class="row top-bottom-margin">
      <div class="col-lg-3 col-xs-12">
        <p>Nombre de participants:</p>
      </div>
        <p class="five-margin">Min</p>
        <%= @point.number_min %>
        <p class="five-margin">Max</p>
        <%= @point.number_max.present? ? @point.number_max : "<i class='fas fa-times'></i>".html_safe %>
    </div>


    <div class="row top-bottom-margin">
      <div class="col-lg-3 col-xs-12">
        <p>Niveau des participants:</p>
      </div>
      <div class="col-lg-9 col-xs-12">
        <div class="stars">
          <% if !@point.level_max.nil? && @point.level_max > @point.level_min %>
            <% for i in 1..@point.level_min %>
              <i class="far fa-star blue" aria-hidden="true"></i>
            <% end %>
            <% for i in @point.level_min..@point.level_max %>
              <i class="fa fa-star blue" aria-hidden="true"></i>
            <% end %>
            <% for i in 1..(5-@point.level_max) %>
              <i class="far fa-star blue" aria-hidden="true"></i>
            <% end %>
          <% else %>
            <% for i in 1..@point.level_min %>
              <i class="fa fa-star blue" aria-hidden="true"></i>
            <% end %>
            <% for i in 1..(5-@point.level_min) %>
              <i class="far fa-star blue" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-2 col-xs-12">
        <div class="display-inline">
          <p class="five-margin">Prix:</p>
          <p><%= @point.price %> €</p>
        </div>
      </div>
    </div>

  </div>
</div>
