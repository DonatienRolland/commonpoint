<div id="participants" class="col-lg-12 col-sm-6 col-xs-12 padding-blocks">
  <div class="dimension-onglet">
    <h3 class="title-onglet">Participants</h3>
  </div>




  <div class="background-white row">
    <div class="col-lg-4">
      <h3>onglets</h3>
      <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
        <%= link_to  '#v-pills-tous', class:'active nav-link', id:'v-pills-tous-tab', data: { toggle: 'pill'}, role: 'tab', aria: { controls: "v-pills-tous", selected: 'true'} do %>
          <p>Tout les participants</p>
        <% end %>
        <% @stars.each do |star| %>
          <%= link_to "#v-pills-level-#{star}", class:'nav-link', id:"v-pills-level-#{star}-tab", data: { toggle: 'pill'}, role: 'tab', aria: { controls: "v-pills-level-#{star}", selected: 'false'} do  %>
            <%= star %> Ã©toiles (<%= @participants.find_by_level(star).count %>)
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-lg-8 scroll-div relative-btn max-height">
      <div class="tab-content" id="v-pills-tabContent">
        <div class="tab-pane active" id="v-pills-tous" role="tabpanel" aria-labelledby="v-pills-tous-tab">
          <%= f.simple_fields_for :participants, @participants do |e| %>
            <div class="row">
              <%= render 'participant_fields', f: e %>
            </div>
          <% end %>
        </div>
        <% @stars.each do |star| %>
          <div class="tab-pane fade" id="v-pills-level-<%=star%>" role="tabpanel" aria-labelledby="v-pills-level-<%=star%>-tab">
            <%= f.simple_fields_for :participants, @participants.find_by_level(star) do |e| %>
              <div class="row">
                <%= render 'participant_fields', f: e %>
              </div>
            <% end %>
          </div>
        <% end %>
        <div class="links form-button form-button-xs circle-btn greend-color bottom-right-btn">
          <%=  link_to_add_association f, :participants  do %>
            <i class="fas fa-plus"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

