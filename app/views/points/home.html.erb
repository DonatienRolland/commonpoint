<%= render 'modal-new-point', user: @user, point: @point %>

  <div id="user_activity-search_bar">
    <%= form_tag home_user_points_path(@user), method: :get do %>
      <%= select_tag :activity_title, options_for_select(@points.collect{ |u| u.user_activity.activity.title }) %>

      <%= text_field_tag :dates, nil, :class =>'datepicker2'  %>

      <%= select_tag( :addresses, options_for_select(@address.insert(0, "Saisissez")), {class:'select2'})  %>

      <!-- <#%= select_tag( :available, options_for_select(@address.insert(0, "", "")), {class:'select2'})  %> -->



      <!-- <#%= text_field_tag :available, params[:available], placeholder: "Saisissez une activité" %> -->
      <%= button_tag class:"recherche-btn" do %>
        <i class="fas fa-search"></i> <h4 class="hidden-sm hidden-xs"> Rechercher </h4>
      <% end %>
    <% end %>
  </div>

<h3><%= @points.count %></h3>

<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="active nav-item">
    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Calendrier</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Flux</a>
  </li>
</ul>

<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <%= render 'calendrier-points', user: @user, points: @points %>
  </div>

  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
    <ul>
      <% @points.each do |point| %>
        <li><%= link_to point.user_activity.activity.title, edit_point_path(point) %></li>
      <% end %>
    </ul>

  </div>
</div>


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newPointModal">
